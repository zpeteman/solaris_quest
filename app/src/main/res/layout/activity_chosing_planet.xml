<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2">


    <ImageButton
        android:id="@+id/mercuryButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/mercury" />

    <ImageButton
        android:id="@+id/venusButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/venus" />

    <ImageButton
        android:id="@+id/earthButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/mercuryButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="38dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/earth" />

    <ImageButton
        android:id="@+id/marsButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/venusButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/mars" />

    <ImageButton
        android:id="@+id/jupiterButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/earthButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/jupiter" />

    <ImageButton
        android:id="@+id/saturnButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/marsButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/saturn" />

    <ImageButton
        android:id="@+id/uranusButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/jupiterButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/uranus" />

    <ImageButton
        android:id="@+id/neptuneButton"
        android:layout_width="125dp"
        android:layout_height="128dp"
        android:layout_below="@id/saturnButton"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/neptune" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:padding="20dp"
        android:text="Pick one of the planets that orbits you,my love,        sorry I mean your MAJESTY!"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
